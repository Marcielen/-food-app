// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model para criar um usu√°rio
model User {
  id String @id @default(uuid())
  name String
  email String
  password String
  created_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("users")
}

model Category {
  id String @id @default(uuid())
  name String
  idUser String
  created_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("categories")
  products Product[]
}

model Product {
  idUser String
  id String @id @default(uuid())
  name String
  price String
  banner String
  description String
  created_at DateTime? @default(now())
  update_at DateTime? @default(now())
  category Category @relation(fields: [category_id], references: [id])
  

  @@map("products")

  category_id String
  
}

model Buy {
  idUser String
  id String @id @default(uuid())
  price Int
  order_pad_id String
  name String?
  
}

model orderRegistration {
  idUser      String
  id          String  @id @default(uuid())
  active      Boolean
  order       String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())

  @@map("orderRegistration")
}


model orderPad {
  id String @id @default(uuid())
  order_id String
  idUser  String
  label String

  active Boolean?

  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())

   @@map("order")
}

model orderPadProduct {
  id String @id @default(uuid())
  order_pad_id String
  product_id String
  amount Int
  totalPrice Float?
  
  idUser  String
  banner String?
  name String?

  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())

   @@map("OrderProduct")
}

model pay {
  id String @id @default(uuid())
  order_pad_id String
  price Int

  idUser  String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
}


